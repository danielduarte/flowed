{
  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "--require",
        "ts-node/register",
        "--colors",
        "${workspaceFolder}/test/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Run Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}
